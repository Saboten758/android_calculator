<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#0D0508">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="|"
        android:textSize="50sp"
        android:background="#84DED2D2"
        android:id="@+id/main"
         />
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main">

        <TextView
            android:id="@+id/buf"
            android:layout_width="79dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="#84DED2D2"
            android:text="Buffer:"
            android:textAlignment="center" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/number_pad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main"
        android:padding="10dp"
        android:layout_marginTop="100dp">

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:id="@+id/first">

          <Button
              android:id="@+id/one"
              android:layout_width="wrap_content"
              android:textSize="25sp"
              android:layout_height="70dp"
              android:text="1" />

          <Button
              android:id="@+id/two"
              android:textSize="25sp"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:layout_marginLeft="120dp"
              android:text="2" />

          <Button
              android:id="@+id/three"
              android:textSize="25sp"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:layout_marginLeft="240dp"
              android:text="3" />
      </RelativeLayout>

      <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/first"
            android:layout_marginTop="20dp"
            android:id="@+id/second">

          <Button
              android:id="@+id/four"
              android:textSize="25sp"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:text="4" />

          <Button
              android:id="@+id/five"
              android:textSize="25sp"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:layout_marginLeft="120dp"
              android:text="5" />

          <Button
              android:id="@+id/six"
              android:textSize="25sp"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:layout_marginLeft="240dp"
              android:text="6" />
      </RelativeLayout>

      <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/second"
          android:layout_marginTop="20dp"
            android:id="@+id/third">

          <Button
              android:id="@+id/seven"
              android:textSize="25sp"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:text="7" />

          <Button
              android:id="@+id/eight"
              android:textSize="25sp"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:layout_marginLeft="120dp"
              android:text="8" />

          <Button
              android:id="@+id/nine"
              android:textSize="25sp"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:layout_marginLeft="240dp"
              android:text="9" />
      </RelativeLayout>

      <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/third"
            android:layout_marginTop="20dp"
            android:id="@+id/forth">

            <Button
                android:id="@+id/zero"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:text="0" />

            <Button
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:textSize="25sp"
                android:layout_marginLeft="120dp"
                android:text="+" />
          <Button
              android:id="@+id/minus"
              android:layout_width="wrap_content"
              android:layout_height="70dp"
              android:textSize="25sp"
              android:layout_marginLeft="240dp"
              android:text="-" />

      </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/forth"
            android:layout_marginTop="20dp"
            android:id="@+id/fifth">

            <Button
                android:id="@+id/equal"
                android:textSize="50sp"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:layout_marginLeft="240dp"
                android:text="=" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/inner_first">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="C"
                    android:textSize="25sp"
                    android:id="@+id/c"
                    android:backgroundTint="#2979FF"/>
                <Button
                    android:id="@+id/mul"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="120dp"
                    android:text="x" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_below="@+id/inner_first"
                android:layout_marginTop="20dp"
                android:id="@+id/inner_last">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="AC"
                    android:backgroundTint="#FF1744"
                    android:textSize="25sp"
                    android:id="@+id/clear" />
                <Button
                    android:id="@+id/div"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_marginLeft="120dp"
                    android:text="/" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>